<style>
  /* Form Container */
form {
  max-width: 800px;
  margin: 2rem auto;
  padding: 2rem;
  background-color: #252525;
  border-radius: 8px;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
  border: 1px solid #333;
}

/* Section Headings */
h3 {
  color: #d4af37;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid #444;
  font-weight: 500;
}

/* Image Manager Section */
.image-manager {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.image-card {
  background-color: #1e1e1e;
  border-radius: 6px;
  overflow: hidden;
  border: 1px solid #333;
  transition: transform 0.3s ease;
}

.image-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.image-card img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-bottom: 1px solid #333;
}

.image-controls {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.image-controls label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #e0e0e0;
  font-size: 0.9rem;
  cursor: pointer;
}

.image-controls input[type="checkbox"],
.image-controls input[type="radio"] {
  accent-color: #d4af37;
  width: 16px;
  height: 16px;
  cursor: pointer;
}

/* New Images Section */
.new-images {
  margin-bottom: 2rem;
  padding: 1.5rem;
  background-color: #1e1e1e;
  border-radius: 6px;
  border: 1px dashed #444;
}

.new-images p {
  color: #aaa;
  margin-bottom: 1rem;
  font-size: 0.9rem;
}

.new-images input[type="file"] {
  width: 100%;
  padding: 0.75rem;
  background-color: #252525;
  border: 1px solid #444;
  border-radius: 4px;
  color: #e0e0e0;
}

.new-images input[type="file"]:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Form Inputs */
input[type="text"] {
  width: 100%;
  padding: 0.75rem;
  margin-bottom: 1.5rem;
  background-color: #1e1e1e;
  border: 1px solid #333;
  border-radius: 4px;
  color: #e0e0e0;
  font-size: 1rem;
  transition: all 0.3s ease;
}

input[type="text"]:focus {
  outline: none;
  border-color: #d4af37;
  box-shadow: 0 0 0 2px rgba(212, 175, 55, 0.2);
}

/* Submit Button */
.btn {
  padding: 0.75rem 1.5rem;
  background-color: #d4af37;
  color: #121212;
  border: none;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.btn:hover {
  background-color: #c9a227;
  transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 768px) {
  form {
    padding: 1.5rem;
    margin: 1rem;
  }
  
  .image-manager {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  }
  
  .image-card img {
    height: 120px;
  }
}
</style>

<form action="/api/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="PUT">
  
  <!-- Current Images -->
  <div class="image-manager">
    <h3>Current Images</h3>
    <% product.images.forEach((image) => { %>
      <div class="image-card">
        <img src="<%= image.url %>">
        <div class="image-controls">
          <label>
            <input type="checkbox" 
                   name="keepImages" 
                   value="<%= image._id %>"
                   checked>
            Keep Image
          </label>
          <label>
            <input type="radio" 
                   name="mainImage" 
                   value="<%= image._id %>"
                   <%= image.isMain ? 'checked' : '' %>>
            Main Image
          </label>
        </div>
      </div>
    <% }); %>
  </div>

  <!-- New Images -->
  <div class="new-images">
    <h3>Add New Images</h3>
    <p>You can add up to <%= 4 - product.images.length %> more images</p>
    <input type="file" 
           name="newImages" 
           multiple
           accept="image/*"
           <%= product.images.length >= 4 ? 'disabled' : '' %>>
  </div>

  <input type="text" name="name" value="<%= product.name %>" required>
  <input type="text" name="category" value="<%= product.category %>" required>
  <input type="text" name="description" value="<%= product.description %>" required>
  
  <button type="submit" class="btn btn-primary">Update Product</button>
</form>